    <div class="text-center">
      <h2 class="card-title fw-bold"><%= category.name %></h2>
      <% if logged_in? && current_user.admin?%>
        <%= link_to 'Update', edit_category_path(category), class: 'btn btn-warning mx-2' %>
        <%= link_to 'Delete', category, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger mx-2' %>
      <%end %>
    </div>
    <div class="card-footer text-center text-muted">
      <small>Created <%= time_ago_in_words(category.created_at) %> ago,
        edited <%= time_ago_in_words(category.updated_at) %> ago</small>
    </div>
    <div class="mt-5">
      <% if category.articles.any? %>
        <%= render 'articles/atricles' %>
      <%end %>
    </div>
