<div class="row justify-content-center">
    <div class="col-10">
        <%= render "shared/errors", obj: @category%>
        <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="form-group row m-1">
            <%= f.label :name, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
                <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of category" %>
            </div>
        </div>
        <div class="form-group justify-content-center">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
        <% end %>
    </div>
    <%= link_to '[ Cancel and return to listing ]', categories_path, class: "text-dark" , data: { turbo_method: :get, turbo_confirm: "Are you sure?"}  %>
</div>
