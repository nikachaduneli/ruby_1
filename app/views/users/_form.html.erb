<div class="row justify-content-center">
  <div class="col-10">
    <%= render "shared/errors", obj: @user%>
    <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
      <div class="form-group row m-1">
        <%= f.label :username, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %>
        </div>
      </div>
      <div class="form-group row m-1">
        <%= f.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group row m-1">
        <%= f.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group row m-1">
        <%= f.label :password_confirmation, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password_confirmation , rows: 10, class: "form-control shadow rounded", placeholder: "confirm Password" %>
        </div>
      </div>
      <div class="form-group row m-1">
        <%= f.label :profile_pic, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.file_field :profile_pic , rows: 10, class: "form-control shadow rounded"%>
        </div>
      </div>

      <div class="form-group justify-content-center m-2 text-center">
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-outline-light btn-lg") %>
      </div>
      <%= link_to 'already have an account?', login_path, class: 'text-white' %>
    <% end %>
  </div>
</div>
