<div class="row justify-content-center">
  <div class="col-10">
    <%= render "shared/errors", obj: @article%>
    <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
      <div class="form-group row m-1">
        <%= f.label :title, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
        </div>
      </div>

      <div class="form-group row m-1">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
        </div>
      </div>
      <div class="form-group row m-1">
        <%= f.label :images, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.file_field :images , rows: 10, class: "form-control shadow rounded", multiple: true%>
        </div>
      </div>
      <div class="form-group justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
  </div>
  <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-dark", data: { turbo_method: :get, turbo_confirm: "Are you sure?"}  %>
</div>
