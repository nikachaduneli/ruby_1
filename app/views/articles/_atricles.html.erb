<% @articles.each do |article| %>
  <div class="container">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-header font-italic">
        <%= article.user ? link_to("by #{article.user.username}", user_path(article.user),  ) : "No Author" %>
      </div>
      <div class="card-body">

        <h2 class="card-title fw-bold"><%= link_to article.title, article_path(article) %></h2>
        <p class="card-text"><%= truncate(article.description) %></p>

        <% if article.images.attached? %>
          <div class="d-flex justify-content-center flex-wrap">
            <% article.images.each do |image| %>
              <%= image_tag image, class: ' rounded float-left img-thumbnail', style: 'max-width: 20%' %>
            <% end %>
          </div>
        <%end %>
      </div>
      <div class="card-footer text-muted">
        <small>Created <%= time_ago_in_words(article.created_at) %> ago,
          edited <%= time_ago_in_words(article.updated_at) %> ago</small>
      </div>
    </div>
  </div>
<% end %>