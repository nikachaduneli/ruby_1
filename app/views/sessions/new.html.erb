<div class="row justify-content-center">
  <div class="col-10">
    <%= form_with scope: :session, url: login_path,  class: "shadow p-3 mb-3 bg-dark rounded", local: true do |f| %>
      <div class="form-group row m-1">
        <%= f.label :email , class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :email, class: "form-control shadow rounded", placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group row m-1">
        <%= f.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password, rows: 10, class: "form-control shadow rounded", placeholder: "Password" %>
        </div>
      </div>

      <div class="form-group justify-content-center m-2 text-center">
        <%= f.submit( "Log In", class: "btn btn-outline-light btn-lg") %>
      </div>
    <% end %>
  </div>
</div>
